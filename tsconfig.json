{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "config/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}